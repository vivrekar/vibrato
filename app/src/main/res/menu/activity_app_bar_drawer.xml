<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="navigation_view">

    <group android:checkableBehavior="single">
        <item
            android:id="@+id/menu_title"
            android:icon="@drawable/round_menu_24"
            android:title="Menu" />
        <item
            android:id="@+id/display_lyrics_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:title="Display Lyrics"
            app:actionLayout="@layout/switch_item"
            app:showAsAction="always" />
        <item
            android:id="@+id/visualizer_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:title="Polylen Mode"
            app:actionLayout="@layout/switch_item"
            app:showAsAction="always" />

        <item
            android:title = "Vibration Intensity" />
        <item
            android:id="@+id/vibration_seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false"
            app:actionLayout="@layout/seek_bar_item"
            app:showAsAction="always" />
        <item
            android:title = "Bass Boost" />
        <item
            android:id="@+id/bass_seek"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:enabled="false"
            app:actionLayout="@layout/seek_bar_item"
            app:showAsAction="always" />
        <item
            android:title = "Volume Boost" />
        <item
            android:id="@+id/loudness_seek"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:enabled="false"
            app:actionLayout="@layout/seek_bar_item"
            app:showAsAction="always" />
    </group>

</menu>
